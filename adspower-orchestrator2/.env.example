# Database
DATABASE_URL=postgresql+asyncpg://adspower:password@localhost:5432/adspower_db
DATABASE_SYNC_URL=postgresql://adspower:password@localhost:5432/adspower_db

# Redis
REDIS_URL=redis://localhost:6379/0

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
SECRET_KEY=your-super-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AdsPower
ADSPOWER_DEFAULT_API_URL=http://local.adspower.net:50325
ADSPOWER_DEFAULT_API_KEY=your-api-key

# SOAX
SOAX_USERNAME=package-325401
SOAX_PASSWORD=your-password
SOAX_HOST=proxy.soax.com
SOAX_PORT=5000

# 3X-UI (Optional)
USE_3XUI=false
THREEXUI_PANEL_URL=http://localhost:54321/
THREEXUI_USERNAME=admin
THREEXUI_PASSWORD=admin

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=300

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_PATH=/backups